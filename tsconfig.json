{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["@playwright/test", "node"],
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
